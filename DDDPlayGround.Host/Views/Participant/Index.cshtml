@model DDDPlayGround.Host.Models.Survey.SurveyViewModel
@{
    ViewData["Title"] = Model?.Name ?? "Survey";
    Layout = null; // keep minimal for local testing
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/survey.css" rel="stylesheet" />
</head>
<body>
    <div class="container py-4">
        <h1 class="mb-4">SAIB Survey Portal</h1>
        <div class="mb-3">
            <h4 class="mb-0">@Model?.Name</h4>
        </div>

        @if ((Model?.Pages?.Count ?? 0) > 0)
        {
            foreach (var page in Model!.Pages)
            {
                @Html.Partial("QuestionComponent/_PageQuestions", page)
            }
        }
    </div>

    
</body>
</html>
