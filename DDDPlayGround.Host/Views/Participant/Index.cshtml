@{
    ViewData["Title"] = "Survey";
    Layout = null; // keep minimal for local testing
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/survey.css" rel="stylesheet" />
</head>
<body>
    <div class="container py-4">
        <h1 class="mb-4">SAIB Survey Portal</h1>
        <div id="surveyApp"></div>
    </div>

    <script>
    window.surveyData = {
      name: "Customer Satisfaction Survey",
      pages: [
        {
          pageNumber: 1,
          questions: [
            {
              id: 1,
              questionTypeId: 1,
              questionTextEn: "Are you satisfied with our service?",
              isMandatory: true
            },
            {
              id: 2,
              questionTypeId: 2,
              questionTextEn: "Please share your comments:",
              isMandatory: false
            },
            {
              id: 3,
              questionTypeId: 3,
              questionTextEn: "Select your preferred contact method:",
              isMandatory: false,
              choices: [
                { id: 1, text: "Email" },
                { id: 2, text: "Phone" },
                { id: 3, text: "SMS" }
              ]
            }
          ]
        }
      ]
    };
    </script>

    <script src="https://unpkg.com/vue@3"></script>
    <script src="/js/components/questionWrapper.js"></script>
    <script src="/js/components/trueFalse.js"></script>
    <script src="/js/components/freeText.js"></script>
    <script src="/js/components/multipleChoice.js"></script>
    <script src="/js/surveyApp.js"></script>
</body>
</html>
